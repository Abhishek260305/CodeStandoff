# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection Strings
# Replace with your actual MongoDB connection strings
MONGODB_USER_DB=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_PROBLEMS_DB=mongodb+srv://username:password@cluster.mongodb.net/Problems?retryWrites=true&w=majority

# CORS Configuration
# For production, use your actual frontend URL
# For development, you can use http://localhost:3000
CORS_ORIGIN=https://yourdomain.com
SOCKET_IO_ORIGIN=http://localhost:3000

# API Configuration
# Base URL for internal API calls
API_BASE_URL=http://localhost:5000

# Security
# IMPORTANT: Generate a strong random secret for production
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=combined.log
